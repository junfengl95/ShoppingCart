@model AcmeCorpShopperUIWebApp.Models.Product;

@{
	ViewData["Title"] = "One";
}

<h1>Product Details</h1>

@if (object.ReferenceEquals(Model, null))
{
	<h3>Product not found for Product Id</h3>
}
else
{
	<p>Product Id: @Model.ProductId.ToString()</p>
	<p>Product Name: @Model.ProductName</p>
	<p>Product Price: @Model.ProductPrice.ToString()</p>
}


<form asp-controller="AcmeCorpShopper" asp-action="AddProductToCart" method="post">
    
    <input type="hidden" name="productId" value="@Model.ProductId" />

    @if (!string.IsNullOrEmpty(ViewBag.CartId))
    {
        @* <p>CartId: @ViewBag.CartId</p>
        <span>@ViewBag.CartId</span> *@
        <input type="hidden" name="cartId" value="@ViewBag.CartId" />
    }
    else
    {
        <p>No CartId found</p>
    }

    <button type="submit">Add to Cart</button>
</form>

<br />
<a asp-controller="AcmeCorpShopper" asp-action="AllProducts">AllProducts</a>
